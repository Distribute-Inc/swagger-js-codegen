const req = {
  method: '{{method}}',
  url: domain + path,
  qs: queryParameters,
  headers: headers,
  data: body
};
if( Object.keys(form).length > 0 ) {
  req.form = form;
}
if( typeof(body) === 'object' && !(body instanceof Buffer) ) {
  req.json = true;
}

return axios(req).then(
  (successResponse) => {
    return Promise.resolve(successResponse);
  },
  (error) => {
    return Promise.reject(error.response);
  }
);
